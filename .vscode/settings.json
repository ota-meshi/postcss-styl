{
    "eslint.validate": [
        "javascript","json","jsonc"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true,
    },
    "[stylus]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.stylelint": false,
        }
    },
    "stylelint.validate": [
        "css",
        "vue",
        "stylus"
    ]
}