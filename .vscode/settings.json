{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true,
    },
    "[stylus]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.stylelint": false,
        }
    },
    "stylelint.customSyntax": "${workspaceFolder}/tests/integration/stylelint/custom-syntax.js",
    "stylelint.validate": [
        "css",
        "vue",
        "stylus"
    ]
}